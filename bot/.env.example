# =======================
# Afroo Exchange V4 - Discord Bot Configuration
# =======================
# Copy this file to .env and fill in your actual values

# =======================
# Discord Bot Token
# =======================
# Get from: https://discord.com/developers/applications
# Can be rotated safely (just need to update on Discord Developer Portal)
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# =======================
# Bot Service Authentication
# =======================
# Token for bot to authenticate with backend API
# Generate with: openssl rand -hex 32
# Must match BOT_SERVICE_TOKEN in backend .env
BOT_SERVICE_TOKEN=your_bot_service_token_here

# =======================
# API Connection
# =======================
# Backend API endpoint
API_BASE_URL=http://afroo-backend-prod:8000

# =======================
# MongoDB Connection (for bot-specific features)
# =======================
# ⚠️  CRITICAL: DO NOT CHANGE MongoDB password in PRODUCTION!
MONGODB_URL=mongodb://admin:your_mongodb_password@afroo-mongodb-prod:27017/afroo_v4?authSource=admin
MONGODB_DATABASE=afroo_v4

# =======================
# Redis Connection
# =======================
REDIS_HOST=afroo-redis-prod
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# =======================
# Discord Server Configuration
# =======================
# Your Discord server/guild ID
DISCORD_GUILD_ID=your_guild_id_here

# Admin user IDs
DISCORD_HEAD_ADMIN_USER_ID=your_head_admin_id
DISCORD_ASSISTANT_ADMIN_USER_ID=your_assistant_admin_id

# =======================
# Feature Flags
# =======================
DEBUG=false
LOG_LEVEL=INFO
